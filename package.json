{
  "name": "docuslicer",
  "version": "1.0.0",
  "description": "PDF workflow automation platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=@docuslicer/api",
    "dev:web": "npm run dev --workspace=@docuslicer/web",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=@docuslicer/api",
    "build:web": "npm run build --workspace=@docuslicer/web",
    "start": "npm run start --workspace=@docuslicer/api",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gnumeco/docuslicerv2.git"
  },
  "author": "DocuSlicer Team",
  "license": "MIT"
}
